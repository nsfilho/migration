{
    "name": "@nsfilho/migration",
    "version": "0.1.14",
    "main": "build/index.js",
    "types": "build/index.d.ts",
    "license": "GPL-3.0",
    "private": false,
    "dependencies": {
        "dayjs": "^1.11.10",
        "mongodb": "^6.5.0",
        "nanoid": "^3.3.7",
        "semver": "^7.6.0"
    },
    "author": {
        "name": "Nelio Souza Santos Filho",
        "email": "nsfilho@icloud.com"
    },
    "publishConfig": {
        "access": "public"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/nsfilho/migration.git"
    },
    "homepage": "https://nsfilho.github.io/migration/index.html",
    "devDependencies": {
        "@commitlint/cli": "^19.2.0",
        "@commitlint/config-conventional": "^19.1.0",
        "@types/ioredis": "^4.28.10",
        "@types/jest": "^29.5.12",
        "@types/mongodb": "^4.0.6",
        "@types/node": "^20.11.28",
        "@typescript-eslint/eslint-plugin": "^7.2.0",
        "@typescript-eslint/parser": "^7.2.0",
        "commitizen": "^4.3.0",
        "cz-conventional-changelog": "3.3.0",
        "eslint": "^8.57.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-prettier": "^9.1.0",
        "eslint-import-resolver-typescript": "^3.6.1",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-prettier": "^5.1.3",
        "gh-pages": "^6.1.1",
        "husky": "^9.0.11",
        "jest": "^29.7.0",
        "lint-staged": "^15.2.2",
        "prettier": "^3.2.5",
        "standard-version": "^9.5.0",
        "ts-jest": "^29.1.2",
        "ts-node": "^10.9.2",
        "typedoc": "^0.25.12",
        "typescript": "^5.4.2"
    },
    "scripts": {
        "lint": "eslint --ext \".js,.jsx,.ts,.tsx\" ./src/",
        "format": "prettier --write src/**/*.{ts,tsx,css,js,jsx} package.json",
        "build": "tsc",
        "docs": "typedoc",
        "prepages": "yarn docs",
        "pages": "gh-pages -d docs",
        "test": "jest --detectOpenHandles",
        "jest": "npm run test",
        "release": "standard-version",
        "prepare": "husky install"
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn docs && yarn build && lint-staged"
        }
    },
    "lint-staged": {
        "src/**/*.+(css|less|scss|md)": [
            "prettier --write"
        ],
        "src/**/*.+(js|jsx|ts|tsx)": [
            "eslint --fix",
            "prettier --write"
        ]
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
